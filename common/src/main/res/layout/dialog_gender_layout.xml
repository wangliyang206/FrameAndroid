<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@drawable/common_list_item_border_bg"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="性别"
        android:textColor="@color/green_color"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_horizontal_black" />

    <RadioGroup
        android:id="@+id/rdioGrup_dialogGenderLayout_gender"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/rdio_dialogGenderLayout_male"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_image_selector"
            android:button="@null"
            android:gravity="left|center_vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="男"
            android:textColor="@color/black_color" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#ffefefef" />

        <RadioButton
            android:id="@+id/rdio_dialogGenderLayout_female"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_image_selector"
            android:button="@null"
            android:gravity="left|center_vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="女"
            android:textColor="@color/black_color" />
    </RadioGroup>

</LinearLayout>