<resources>
    <!--base theme light-->
    <style name="Base.App.Theme.Light" parent="@style/Theme.AppCompat.Light">
        <item name="android:expandableListViewStyle">@style/ExpandableListView</item>
        <item name="android:buttonStyle">@style/ButtonWhite</item>
        <item name="android:scrollbarSize">15dip</item>
        <!-- 设置activity切换动画 -->
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>

    <!-- 图片选择器 -->
    <style name="MIS_NO_ACTIONBAR" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <!-- 界面右滑动回退主题 -->
    <style name="ThemeSwipeBack" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:expandableListViewStyle">@style/ExpandableListView</item>
        <item name="android:buttonStyle">@style/ButtonWhite</item>
        <item name="android:scrollbarSize">15dip</item>
        <!-- 设置activity切换动画 -->
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/white_color</item>
        <item name="android:listDivider">@drawable/divider</item>
    </style>

    <!-- 日间模式 -->
    <style name="App.Theme.Light" parent="Base.App.Theme.Light" />

    <style name="scroll_textView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:marqueeRepeatLimit">50</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <!-- 好友列表item样式 -->
    <style name="ExpandableListView">
        <item name="android:groupIndicator">@drawable/common_expander_group</item>
        <item name="android:indicatorLeft">?android:attr/expandableListPreferredItemIndicatorLeft
        </item>
        <item name="android:indicatorRight">
            ?android:attr/expandableListPreferredItemIndicatorRight
        </item>
        <item name="android:childDivider">@drawable/line_horizontal_intermittent_black</item>
    </style>

    <!-- 白色按钮样式 -->
    <style name="ButtonWhite">
        <item name="android:background">@drawable/common_btn_bg_white</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <!-- 黑色阴影效果 -->
    <style name="shadowBlack">
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <!-- 白色阴影效果 -->
    <style name="shadowWhite">
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="dialog_common" parent="@android:style/Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

    <style name="dialog_bottom" parent="@style/dialog_common">
        <item name="android:windowBackground">@drawable/dialog_bottom_background</item>
        <item name="android:windowAnimationStyle">@style/popupWindowAnimation_bottom</item>
    </style>

    <!-- 弹框样式(背景半透明) -->
    <style name="dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/translucent_20</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>
    <!-- popupWindow弹框动画(上下伸缩-从上往下伸出) -->
    <style name="popupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
    </style>

    <!-- popupWindow弹框动画(上下伸缩-从下往上伸出) -->
    <style name="popupWindowAnimation_bottom">
        <item name="android:windowEnterAnimation">@anim/popshow_bottom_anim</item>
        <item name="android:windowExitAnimation">@anim/pophidden_bottom_anim</item>
    </style>
    <!-- popupWindow弹框动画(从右往左伸出) -->
    <style name="popupWindowAnimation_right">
        <item name="android:windowEnterAnimation">@anim/base_slide_right_in</item>
        <item name="android:windowExitAnimation">@anim/base_slide_right_out</item>
    </style>

    <!-- activity开启无动画 -->
    <style name="Theme" parent="android:Theme">
        <item name="android:windowAnimationStyle">@style/noAnimation</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="noAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <!--右进右出-->
    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>

    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>
</resources>